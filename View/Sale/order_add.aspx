                row = GetSaleDiscounts(row);
                manager.updateRow(manager.getRow(i), row);
            }
            $("#T_amount").val(toMoney(manager.getColumnDateByType('amount', 'sum') * 1.0));
            $("#T_discount").val(toMoney(manager.getColumnDateByType('Discounts', 'sum') * 1.0));
            getAmount();
        }

